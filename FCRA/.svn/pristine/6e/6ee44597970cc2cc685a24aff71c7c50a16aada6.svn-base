html, body {
	height: 100%;
	font-family: "Tahoma", "Verdana", sans-serif;
	font-size: 12px;
	margin:0 !important;
}
#container{
	height:100%;
	background-image:url(../../img/auth/login/indian-flag-bg.jpg);
	background-repeat: no-repeat;
	background-position: 60%;
	/*background-attachment:fixed;*/
	background-size: Auto 100%;
}
#header{
	background: url(../../img/auth/login/header_bg.png) repeat-x #f5f5f5;
	height:116px;
}
#header-bg{
	background: url(../../img/auth/login/header-fcra.png) no-repeat top center;
	height:71px;
}
.head{
	text-align:center;
	padding: .4em 0 0 0;
}
#content {
	clear: both;
	padding-top: 4px;
	
}
#java-error-div {
    position:absolute;
    top:25%;
    right:300px;
    opacity:0.8;
}
.login-form {
    width: 400px;
    position:absolute;
    top:36%;
    right:500px;
    padding: 15px;
    background: #FFFFFF;
    opacity:0.85;
    border-radius: 4px;
    color: #7e7975;
   	box-shadow: 0px 0px 9px 8px rgba(75, 71, 71, 0.75);
	-moz-box-shadow: 0px 0px 9px 8px rgba(75, 71, 71, 0.75);
	-webkit-box-shadow: 0px 0px 9px 8px rgba(75, 71, 71, 0.75);
}
.login-form .login-form-heading, .login-form .checkbox {
    margin-bottom: 10px;
}
.login-form .checkbox {
    font-weight: normal;
}
.login-form input[type="text"], .login-form input[type="password"], .login-form input[type="email"] {
    -moz-box-sizing: border-box;
    font-size: 16px;
    height: auto;
    padding: 10px;
    position: relative;
}
.login-form input[type="text"]:focus, .login-form input[type="password"]:focus, .login-form input[type="email"]:focus {
    z-index: 2;
}
.login-form input[type="text"] {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    margin-bottom: -1px;
}
.login-form input[type="password"] {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    margin-bottom: 10px;
}
.login-form input[type="email"] {
    border-radius: 0 0 0 0;
    margin-bottom: -1px;
}
/********** Footer **********/

#footer {
	position: absolute;
	background: #fff;
	border-top: 1px solid #c4c4c4;
	bottom: 1px;
	clear: both;
	color: #999;
	font-size: 11px;
	height: 39px;
	line-height: 39px;
	/*margin-top: 16px;*/
	text-align: center;
	width: 100%;
	
	background-image:url(../../img/auth/login/bg.jpg);
	background-repeat: repeat;
	background-position: 0 0;
}
#footer a {
	color: #3790dc;
}

/********** Styles **********/

h1, h2, h3, h4, h5, h6,{
	font-family: "PT Sans", "Tahoma", "Verdana", sans-serif;
}
h4 {font-size:22px !important; font-variant:small-caps; line-height:1.2em ; text-align:start ; color:#051321; margin:-1.88em 0 0 1em;}
h3 {font-size:16px; font-variant:small-caps; line-height:1.2em; text-align:left; color:#051321; margin:.35em 0 0 0;}
a {
	color: #005ba8;
	text-decoration: none;
	outline: none !important;
}

a:hover {
	text-decoration: underline;
}